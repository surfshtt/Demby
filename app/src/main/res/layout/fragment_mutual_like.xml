<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <RelativeLayout android:id="@+id/profile_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_all"
        android:layout_marginHorizontal="28dp"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/demeby_icon_round" />

        <LinearLayout
            android:id="@+id/self_info_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/your_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demby"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/your_city_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Минск"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/your_age_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="25sp"
                />
        </LinearLayout>

        <ScrollView
            android:id="@+id/description_field"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/self_info_field"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/profile_description_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:text="Пока что твою анкету никто не лайкнул. Давай немного подождем"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="17sp"
                android:gravity="start"
                />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/description_field">

            <ImageView
                android:id="@+id/inst_button"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/icons8_instagram" />

            <ImageView
            android:id="@+id/tg_button"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/icons8_telegram"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="3dp">

                <Button
                    android:id="@+id/next_profile_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blue3"
                    android:text="Далее"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_extrabold"
                    app:cornerRadius="15dp" />

            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>